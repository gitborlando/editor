{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gen-comp",
      "type": "process",
      "command": "npx",
      "args": [
        "tsx",
        "scripts/gen-comp.ts",
        "${input:dirName}",
        "${input:componentName}",
        "${input:prefix}"
      ]
    },
    {
      "label": "hard sync",
      "type": "process",
      "command": "git",
      "args": ["reset", "--hard", "origin/refact"]
    }
  ],
  "inputs": [
    {
      "id": "dirName",
      "description": "输入文件夹名称 (例如: files, user)",
      "default": "src/view/component",
      "type": "promptString"
    },
    {
      "id": "componentName",
      "description": "输入组件名称 (例如: UserCard, NavigationBar)",
      "default": "MyComponent",
      "type": "promptString"
    },
    {
      "id": "prefix",
      "description": "输入组件前缀 (例如: src, view)",
      "default": "pages",
      "type": "promptString"
    }
  ]
}
